@model EmployeesViewModel

@{
    ViewData["Title"] = "Lista pracowników";
}

<h1>@ViewBag.Title</h1>

<div class="mb-3 mt-3">
    <a asp-action="Create" class="btn btn-primary">Create</a>
</div>

<div class="mb-3">
    <form asp-action="Index" method="get">
        <div class="input-group mb-3">
            <input asp-for="SearchPhrase" placeholder="Wpisz szukaną frazę" class="form-control">
            <button class="btn btn-secondary input-group-text">Szukaj</button>
        </div>
    </form>
</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Title</th>
        <th>City</th>
        <th>Country</th>
        <th>Operations</th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Title</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.EmployeeId">Details</a>
                <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
    }

</table>

<div>
    Liczba rekordów: <strong>@Model.Employees.Count</strong>
</div>