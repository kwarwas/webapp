@model DetailsEmployeeViewModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            @Model.TitleOfCourtesy @Model.FirstName @Model.LastName
        </h5>
        <div class="card-text">
            <div>
                @Model.Title
            </div>
            <div>
                Hire date: @Model.HireDate?.ToString("yyyy-MM-dd")
            </div>
            <hr/>
            <partial name="_AddressPartial" model="@Model.Address"/>
        </div>
    </div>
</div>
